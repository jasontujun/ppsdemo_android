<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_frame"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:padding="10dp"
                android:background="@drawable/bg_transparent_orange">
    <!--节目海报-->
    <ImageView
            android:id="@+id/program_img"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@color/dark_gray"/>
    <!--节目信息-->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/program_img"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/program_rank"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_ss_number1"/>
            <TextView
                    android:id="@+id/program_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精忠岳飞TV版"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
                android:id="@+id/program_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="古装、剧情"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_ss_online"/>
            <TextView
                    android:id="@+id/online_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:text="在线人数:288"
                    android:textSize="14sp"
                    android:textColor="@color/dark_gray"/>
        </LinearLayout>
    </LinearLayout>
    <!--得分-->
    <TextView
            android:id="@+id/program_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="8.3"
            android:textSize="30sp"
            android:textColor="@color/orange"/>
</RelativeLayout>