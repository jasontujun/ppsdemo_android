<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:background="@drawable/area_sift">
    <LinearLayout
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        <TextView
                android:id="@+id/filter_tab1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:text="类型"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/area_arrows"/>
        <TextView
                android:id="@+id/filter_tab2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:text="年份"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/area_ohters"/>
        <TextView
                android:id="@+id/filter_tab3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:text="字母"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/area_ohters"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/area_ohters"/>
    </LinearLayout>
    <!--style="@style/listview"-->
    <ListView
            style="@style/listview"
            android:id="@+id/filter_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@drawable/list_line_gray"
            android:dividerHeight="1dp"
            android:scrollbars="none"/>
</LinearLayout>