<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white">
    <!--顶栏-->
    <RelativeLayout
            android:id="@+id/top_bar_frame"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/pps_title">
        <ImageView
                android:id="@+id/menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_title_menu"
                android:background="@drawable/bg_transparent_orange"/>
        <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/menu_btn"
                android:text="XX节目"
                android:textSize="16sp"
                android:textColor="@color/black"/>
    </RelativeLayout>

    <!--loading-->
    <LinearLayout
            android:id="@+id/all_loading_frame"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">
        <ProgressBar
                style="?android:progressBarStyleSmall"
                android:id="@+id/all_loading_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:indeterminateDrawable="@drawable/progressbar_small"/>
        <TextView
                android:id="@+id/all_loading_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="正在加载..."
                android:textSize="15sp"
                android:textColor="@color/dark_gray"/>
    </LinearLayout>

    <!--内容-->
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <!--内容栏-->
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/top_bar_frame"
                android:layout_above="@+id/bottom_bar_frame"
                android:background="@color/dark_white">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <!--视频信息-->
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                    <!--节目海报-->
                    <ImageView
                            android:id="@+id/program_img"
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/default_image_bg_small"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:background="@drawable/pic_poser_background"/>
                    <!--节目信息-->
                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/program_img"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">
                        <!--地区-->
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="地区："
                                    android:textSize="13sp"
                                    android:textColor="@color/light_black"/>
                            <TextView
                                    android:id="@+id/program_area"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="中国大陆"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>
                        </LinearLayout>
                        <!--类型-->
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="类型："
                                    android:textSize="13sp"
                                    android:textColor="@color/light_black"/>
                            <TextView
                                    android:id="@+id/program_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="古装、传记"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"/>
                        </LinearLayout>
                        <!--导演-->
                        <LinearLayout
                                android:id="@+id/program_director_frame"
                                android:layout_width="fill_parent"
                                android:layout_height="20dp"
                                android:layout_marginTop="6dp"
                                android:fitsSystemWindows="true"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="导演："
                                    android:textSize="13sp"
                                    android:textColor="@color/light_black"/>
                        </LinearLayout>
                        <!--演员-->
                        <LinearLayout
                                android:id="@+id/program_actor_frame"
                                android:layout_width="fill_parent"
                                android:layout_height="20dp"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="演员："
                                    android:textSize="13sp"
                                    android:textColor="@color/light_black"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--评分-->
                    <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/grade_bg">
                        <TextView
                                android:id="@+id/program_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:text="8.3"
                                android:textSize="20sp"
                                android:textColor="@color/orange"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="2dp"
                                android:text="评分"
                                android:textSize="8sp"
                                android:textColor="@color/white"/>
                    </RelativeLayout>
                </RelativeLayout>
                <!--按钮栏-->
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <!--播放按钮-->
                    <LinearLayout
                            android:id="@+id/play_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:background="@drawable/bg_btn_roundrect">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/details_play_imageview"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="立即播放"
                                android:textSize="13sp"
                                android:textColor="@color/black"/>
                    </LinearLayout>
                    <!--下载按钮-->
                    <LinearLayout
                            android:id="@+id/download_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/play_btn"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:background="@drawable/bg_btn_roundrect">
                        <ImageView
                                android:id="@+id/download_btn_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/details_download_imageview"/>
                        <TextView
                                android:id="@+id/download_btn_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="下载视频"
                                android:textSize="13sp"
                                android:textColor="@color/black"/>
                    </LinearLayout>
                    <!--来源按钮-->
                    <LinearLayout
                            android:id="@+id/src_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="播放来源："
                                android:textSize="13sp"
                                android:textColor="@color/light_black"/>
                        <ImageView
                                android:id="@+id/src_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_third_pps"/>
                        <ImageView
                                android:id="@+id/src_tip"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_third_shouqi"/>
                    </LinearLayout>
                </RelativeLayout>
                <!--播放来源栏-->
                <GridView
                        style="@style/gridview"
                        android:id="@+id/src_gridview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:numColumns="auto_fit"
                        android:verticalSpacing="10dp"
                        android:background="@drawable/ic_third_gridview"
                        android:visibility="gone"/>
                <!--简介-->
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="6dp"
                        android:background="@drawable/ic_details_story_introduce">
                    <TextView
                            android:id="@+id/program_brief"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="      《精忠岳飞》着重描写岳飞从普通士兵成长为抗金军事统帅的传奇一生。"
                            android:textSize="13sp"
                            android:textColor="@color/light_black"
                            android:maxLines="2"/>
                </RelativeLayout>
                <!--资源类别栏-->
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp">
                    <!--左按钮-->
                    <LinearLayout
                            android:id="@+id/type_left_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/tab_3l_gray">
                        <ImageView
                                android:layout_width="60dp"
                                android:layout_height="fill_parent"
                                android:padding="10dp"
                                android:src="@drawable/ic_ipd1l_left"/>
                        <ImageView
                                android:layout_width="0.5dp"
                                android:layout_height="fill_parent"
                                android:src="@color/gray"/>
                    </LinearLayout>
                    <!--右按钮-->
                    <LinearLayout
                            android:id="@+id/type_right_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            android:background="@drawable/tab_3l_gray">
                        <ImageView
                                android:layout_width="0.5dp"
                                android:layout_height="fill_parent"
                                android:src="@color/gray"/>
                        <ImageView
                                android:layout_width="60dp"
                                android:layout_height="fill_parent"
                                android:padding="10dp"
                                android:src="@drawable/ic_ipd1l_right"
                                android:background="@drawable/tab_3l_gray"/>
                    </LinearLayout>
                    <!--类别标签-->
                        <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_toRightOf="@+id/type_left_btn"
                                android:layout_toLeftOf="@+id/type_right_btn"
                                android:orientation="horizontal"
                                android:background="@drawable/tab_3l_gray">
                            <!--国语普通-->
                            <RelativeLayout
                                    android:id="@+id/type_tab_normal"
                                    android:layout_width="65dp"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/tab_3l_white">
                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:layout_centerInParent="true"
                                        android:orientation="horizontal">
                                    <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:orientation="vertical">
                                        <TextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:text="国语"
                                                android:textSize="13sp"
                                                android:textColor="@color/black"/>
                                        <TextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:text="普通"
                                                android:textSize="13sp"
                                                android:textColor="@color/black"/>
                                    </LinearLayout>
                                    <ImageView
                                            android:id="@+id/tab_order_normal"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="6dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/ic_details_arrow_up"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <ImageView
                                    android:layout_width="0.5dp"
                                    android:layout_height="fill_parent"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:src="@color/gray"/>
                            <!--国语高清-->
                            <RelativeLayout
                                    android:id="@+id/type_tab_hq"
                                    android:layout_width="65dp"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/tab_3l_gray">
                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:layout_centerInParent="true"
                                        android:orientation="horizontal">
                                    <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:orientation="vertical">
                                        <TextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:text="国语"
                                                android:textSize="13sp"
                                                android:textColor="@color/black"/>
                                        <TextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:text="高清"
                                                android:textSize="13sp"
                                                android:textColor="@color/dark_blue"/>
                                    </LinearLayout>
                                    <ImageView
                                            android:id="@+id/tab_order_hq"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="6dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/ic_details_arrow_up"
                                            android:visibility="gone"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <ImageView
                                    android:layout_width="0.5dp"
                                    android:layout_height="fill_parent"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:src="@color/gray"/>
                            <!--预告花絮-->
                            <RelativeLayout
                                    android:id="@+id/type_tab_trailer"
                                    android:layout_width="65dp"
                                    android:layout_height="fill_parent"
                                    android:background="@drawable/tab_3l_gray">
                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:layout_centerInParent="true"
                                        android:orientation="horizontal">
                                    <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:orientation="vertical">
                                        <TextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:text="预告"
                                                android:textSize="13sp"
                                                android:textColor="@color/black"/>
                                        <TextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:text="花絮"
                                                android:textSize="13sp"
                                                android:textColor="@color/black"/>
                                    </LinearLayout>
                                    <ImageView
                                            android:id="@+id/tab_order_trailer"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="6dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/ic_details_arrow_up"
                                            android:visibility="gone"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                </RelativeLayout>
                <!--集数列表-->
                <!--style="@style/gridview"-->
                <GridView
                        style="@style/gridview"
                        android:id="@+id/episode_frame"
                        android:layout_width="fill_parent"
                        android:layout_height="500dp"
                        android:columnWidth="50dp"
                        android:numColumns="auto_fit"
                        android:horizontalSpacing="10dp"
                        android:verticalSpacing="10dp"
                        android:background="@color/white"/>
            </LinearLayout>
        </ScrollView>
        <!--底部按钮栏-->
        <LinearLayout
                android:id="@+id/bottom_bar_frame"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:background="@drawable/background_help">
            <!--tab1-->
            <LinearLayout
                    android:id="@+id/favour_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_transparent_orange">
                <ImageView
                        android:id="@+id/favour_btn_tip"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_details_favour"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="收藏"
                        android:textSize="14sp"
                        android:textColor="@color/gray"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black"/>
            <!--tab2-->
            <LinearLayout
                    android:id="@+id/share_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_transparent_orange">
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_details_share"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="分享"
                        android:textSize="14sp"
                        android:textColor="@color/gray"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black"/>
            <!--tab3-->
            <LinearLayout
                    android:id="@+id/comment_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_transparent_orange">
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_details_comment"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="评论"
                        android:textSize="14sp"
                        android:textColor="@color/gray"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>