<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <!--顶栏-->
    <RelativeLayout
            android:id="@+id/top_bar_frame"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/pps_title">
        <ImageView
                android:id="@+id/menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_title_menu"
                android:background="@drawable/bg_transparent_orange"/>
        <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/menu_btn"
                android:text="XX节目"
                android:textSize="16sp"
                android:textColor="@color/black"/>
    </RelativeLayout>

    <!--内容栏-->
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/top_bar_frame"
            android:layout_above="@+id/bottom_bar_frame"
            android:background="@color/dark_white">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!--视频信息-->
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                <!--节目海报-->
                <ImageView
                        android:id="@+id/program_img"
                        android:layout_width="70dp"
                        android:layout_height="90dp"
                        android:layout_centerVertical="true"
                        android:src="@color/dark_gray"/>
                <!--节目信息-->
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/program_img"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                    <!--地区-->
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="地区："
                                android:textSize="15sp"
                                android:textColor="@color/light_black"/>
                        <TextView
                                android:id="@+id/program_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="中国大陆"
                                android:textSize="15sp"
                                android:textColor="@color/black"/>
                    </LinearLayout>
                    <!--类型-->
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="类型："
                                android:textSize="15sp"
                                android:textColor="@color/light_black"/>
                        <TextView
                                android:id="@+id/program_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="古装、传记"
                                android:textSize="15sp"
                                android:textColor="@color/black"/>
                    </LinearLayout>
                    <!--导演-->
                    <LinearLayout
                            android:id="@+id/program_director_frame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="导演："
                                android:textSize="15sp"
                                android:textColor="@color/light_black"/>
                        <TextView
                                android:id="@+id/program_director"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="鞠觉亮"
                                android:textSize="15sp"
                                android:textColor="@color/dark_blue"
                                android:background="@drawable/bg_transparent_black"/>
                    </LinearLayout>
                    <!--演员-->
                    <LinearLayout
                            android:id="@+id/program_actor_frame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="演员："
                                android:textSize="15sp"
                                android:textColor="@color/light_black"/>
                    </LinearLayout>
                </LinearLayout>
                <!--评分-->
                <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/grade_bg">
                    <TextView
                            android:id="@+id/program_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:text="8.3"
                            android:textSize="20sp"
                            android:textColor="@color/orange"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="2dp"
                            android:text="评分"
                            android:textSize="8sp"
                            android:textColor="@color/white"/>
                </RelativeLayout>
            </RelativeLayout>
            <!--按钮栏-->
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                <!--播放按钮-->
                <LinearLayout
                        android:id="@+id/play_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:background="@drawable/bg_btn_roundrect">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/details_play_imageview"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="立即播放"
                            android:textSize="15sp"
                            android:textColor="@color/light_black"/>
                </LinearLayout>
                <!--下载按钮-->
                <LinearLayout
                        android:id="@+id/download_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:background="@drawable/bg_btn_roundrect">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/details_download_imageview"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="下载视频"
                            android:textSize="15sp"
                            android:textColor="@color/light_black"/>
                </LinearLayout>
            </LinearLayout>
            <!--简介-->
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="6dp"
                    android:background="@drawable/ic_details_story_introduce">
                <TextView
                        android:id="@+id/program_outline"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="      《精忠岳飞》着重描写岳飞从普通士兵成长为抗金军事统帅的传奇一生。"
                        android:textSize="13sp"
                        android:textColor="@color/light_black"
                        android:maxLines="2"/>
            </RelativeLayout>
            <!--资源类别栏-->
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/tab_3l_gray">
                <ImageButton
                        android:id="@+id/type_left_btn"
                        android:layout_width="60dp"
                        android:layout_height="fill_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_ipd1l_left"/>
                <ImageButton
                        android:id="@+id/type_right_btn"
                        android:layout_width="60dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_ipd1l_right"/>
                <Gallery
                        android:id="@+id/type_tab_gallery"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_toRightOf="@+id/type_left_btn"
                        android:layout_toLeftOf="@+id/type_right_btn"/>
            </RelativeLayout>
            <!--集数列表-->
            <LinearLayout
                    android:id="@+id/episode_frame"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--底部按钮栏-->
    <LinearLayout
            android:id="@+id/bottom_bar_frame"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@drawable/background_help">
        <!--tab1-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/tab_tip1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_details_favour"/>
            <TextView
                    android:id="@+id/tab_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="收藏"
                    android:textSize="14sp"
                    android:textColor="@color/gray"/>
        </LinearLayout>
        <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black"/>
        <!--tab2-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/tab_tip2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_details_share"/>
            <TextView
                    android:id="@+id/tab_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="分享"
                    android:textSize="14sp"
                    android:textColor="@color/gray"/>
        </LinearLayout>
        <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black"/>
        <!--tab3-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/tab_tip3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_details_comment"/>
            <TextView
                    android:id="@+id/tab_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="评论"
                    android:textSize="14sp"
                    android:textColor="@color/gray"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>